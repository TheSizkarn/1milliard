{% extends "base.html.twig" %}
{% block body %}
    {% if movie.poster is not null %}
        <img
                src="{{ asset(movie.poster.webPath) }}"
                alt="{{ movie.poster.alt }}"
                height="500"
        />
    {% endif %}
    {% if movie.banner is not null %}
        <img
                src="{{ asset(movie.banner.webPath) }}"
                alt="{{ movie.banner.alt }}"
                height="500"
        />
    {% endif %}
